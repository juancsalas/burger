<div class="container">

    {{!-- Row for the image --}}
    <div class="row text-center">
        <div class="col">
            <br>
            <img class="burgerImage" src="/assets/img/burger.png" alt="burger">
        </div>
    </div>

    {{!-- Row for the title --}}
    <div class="row text-center">
        <div class="col">
            <br>
            <h2 class="text-danger">Eat-Da-Burger</h2>
        </div>
    </div>

    {{!-- Row for the burger names and button --}}
    <div id="burgerTable" class="row">

        {{!-- column holds the non devoured burgers and button --}}
        <ol class="col-6 text-center">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ol>

        {{!-- column holds devoured burger --}}
        <ol class="col-6 text-center">
            {{#each burgers}}
                {{#if devoured}}
                    {{>burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ol>   
    </div>

    {{!-- Row containing the form to add burgers --}}
    <div class="row">
        <div class="col-6 offset-3 text-center">
            <form class="create-form">

                <div class="form-group">
                    <label for="newBurger"></label>
                    <textarea class="form-control" type="text" name="name" id="newBurger" rows="3"></textarea>
                </div>

                <button class="btn btn-info btn-small"  type="submit">Submit</button>
                <p class="message">Enter a burger you want to eat and hit the "Submit" button.</p>
            </form>
        </div>
    </div>
</div>