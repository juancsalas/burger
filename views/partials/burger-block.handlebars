<li class="burgerItem">

    <div class="col-6 bg-light">
        {{burger_name}}
    </div>

    <div>
        {{#if devoured}}
            <button class="devoured btn btn-info btn-small" data-id="{{id}}" data-devoured="{{devoured}}">
                DEVOUR IT!            
            </button>
        {{/if}}
    </div>

</li>
